local FluentRedz = {}
FluentRedz.__index = FluentRedz

-- Services
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

-- Theme
local Themes = {
    Dark = {
        Main = Color3.fromRGB(25, 25, 30),
        Secondary = Color3.fromRGB(35, 35, 45),
        Accent = Color3.fromRGB(0, 170, 255),
        Text = Color3.fromRGB(240, 240, 240),
        SubText = Color3.fromRGB(180, 180, 190)
    },
    Light = {
        Main = Color3.fromRGB(245, 245, 250),
        Secondary = Color3.fromRGB(230, 230, 240),
        Accent = Color3.fromRGB(0, 120, 215),
        Text = Color3.fromRGB(30, 30, 40),
        SubText = Color3.fromRGB(100, 100, 120)
    }
}

-- Main GUI
local mainGui = Instance.new("ScreenGui")
mainGui.Name = "Astra X Hub"
mainGui.ZIndexBehavior = Enum.ZIndexBehavior.Global
mainGui.DisplayOrder = 999
mainGui.ResetOnSpawn = false
mainGui.Parent = game:GetService("CoreGui")

-- Utility functions
local function createGlow(frame, color)
    local glow = Instance.new("ImageLabel")
    glow.Name = "Glow"
    glow.Image = "rbxassetid://8992231223"
    glow.ImageColor3 = color
    glow.BackgroundTransparency = 1
    glow.Size = UDim2.new(1, 40, 1, 40)
    glow.Position = UDim2.new(0, -20, 0, -20)
    glow.ZIndex = frame.ZIndex - 1
    glow.ScaleType = Enum.ScaleType.Slice
    glow.SliceCenter = Rect.new(49, 49, 450, 450)
    glow.Parent = frame
    return glow
end

-- Window Class
local Window = {}
Window.__index = Window

function Window.new(title, config)
    local self = setmetatable({}, Window)
    
    config = config or {}
    self.Title = title or "FluentRedz UI"
    self.Theme = Themes[config.Theme or "Dark"]
    self.Tabs = {}
    self.Visible = true
    
    -- Main container
    self.Container = Instance.new("Frame")
    self.Container.Name = "Window"
    self.Container.Size = UDim2.new(0, 500, 0, 400)
    self.Container.Position = UDim2.new(0.5, -250, 0.5, -200)
    self.Container.BackgroundColor3 = self.Theme.Main
    self.Container.BackgroundTransparency = 0.05
    self.Container.BorderSizePixel = 0
    self.Container.ZIndex = 10
    
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 12)
    corner.Parent = self.Container
    
    local shadow = Instance.new("ImageLabel")
    shadow.Name = "Shadow"
    shadow.Image = "rbxassetid://8992231223"
    shadow.ImageColor3 = Color3.new(0, 0, 0)
    shadow.ImageTransparency = 0.8
    shadow.BackgroundTransparency = 1
    shadow.Size = UDim2.new(1, 44, 1, 44)
    shadow.Position = UDim2.new(0, -22, 0, -22)
    shadow.ZIndex = self.Container.ZIndex - 1
    shadow.ScaleType = Enum.ScaleType.Slice
    shadow.SliceCenter = Rect.new(49, 49, 450, 450)
    shadow.Parent = self.Container
    
    -- Top bar
    self.TopBar = Instance.new("Frame")
    self.TopBar.Name = "TopBar"
    self.TopBar.Size = UDim2.new(1, 0, 0, 40)
    self.TopBar.BackgroundColor3 = self.Theme.Secondary
    self.TopBar.BackgroundTransparency = 0.1
    self.TopBar.BorderSizePixel = 0
    self.TopBar.ZIndex = 11
    self.TopBar.Parent = self.Container
    
    local topCorner = Instance.new("UICorner")
    topCorner.CornerRadius = UDim.new(0, 12)
    topCorner.Parent = self.TopBar
    
    -- Title
    self.TitleLabel = Instance.new("TextLabel")
    self.TitleLabel.Name = "Title"
    self.TitleLabel.Size = UDim2.new(0.7, 0, 1, 0)
    self.TitleLabel.BackgroundTransparency = 1
    self.TitleLabel.Text = self.Title
    self.TitleLabel.TextColor3 = self.Theme.Text
    self.TitleLabel.TextSize = 18
    self.TitleLabel.Font = Enum.Font.GothamSemibold
    self.TitleLabel.TextXAlignment = Enum.TextXAlignment.Left
    self.TitleLabel.ZIndex = 12
    self.TitleLabel.Parent = self.TopBar
    
    local padding = Instance.new("UIPadding")
    padding.PaddingLeft = UDim.new(0, 15)
    padding.Parent = self.TitleLabel
    
    -- Close button
    self.CloseButton = Instance.new("ImageButton")
    self.CloseButton.Name = "CloseButton"
    self.CloseButton.Size = UDim2.new(0, 30, 0, 30)
    self.CloseButton.Position = UDim2.new(1, -35, 0.5, -15)
    self.CloseButton.BackgroundColor3 = Color3.fromRGB(255, 60, 60)
    self.CloseButton.BackgroundTransparency = 0.8
    self.CloseButton.ZIndex = 12
    
    local closeCorner = Instance.new("UICorner")
    closeCorner.CornerRadius = UDim.new(1, 0)
    closeCorner.Parent = self.CloseButton
    
    self.CloseButton.Parent = self.TopBar
    
    -- Tab container
    self.TabContainer = Instance.new("Frame")
    self.TabContainer.Name = "TabContainer"
    self.TabContainer.Size = UDim2.new(1, -30, 1, -80)
    self.TabContainer.Position = UDim2.new(0, 15, 0, 60)
    self.TabContainer.BackgroundTransparency = 1
    self.TabContainer.ZIndex = 10
    self.TabContainer.Parent = self.Container
    
    self.Container.Parent = mainGui
    
    -- Drag functionality
    local dragging = false
    local dragInput, dragStart, startPos
    
    self.TopBar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = self.Container.Position
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)
    
    self.TopBar.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            dragInput = input
        end
    end)
    
    UserInputService.InputChanged:Connect(function(input)
        if dragging and input == dragInput then
            local delta = input.Position - dragStart
            self.Container.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
    
    return self
end

function Window:CreateTab(name, icon)
    -- Tab implementation
    local tab = {}
    tab.Window = self
    tab.Name = name
    tab.Icon = icon
    tab.Controls = {}
    tab.SearchResults = {}
    tab.IsSearching = false
    
    -- Tab button
    tab.Button = Instance.new("TextButton")
    tab.Button.Name = name .. "Tab"
    tab.Button.Size = UDim2.new(0, 100, 0, 35)
    tab.Button.BackgroundColor3 = self.Theme.Secondary
    tab.Button.BackgroundTransparency = 0.7
    tab.Button.Text = icon and (icon .. " " .. name) or name
    tab.Button.TextColor3 = self.Theme.SubText
    tab.Button.TextSize = 14
    tab.Button.Font = Enum.Font.Gotham
    tab.Button.AutoButtonColor = false
    tab.Button.ZIndex = 15
    
    local btnCorner = Instance.new("UICorner")
    btnCorner.CornerRadius = UDim.new(0, 8)
    btnCorner.Parent = tab.Button
    
    -- Tab content
    tab.Content = Instance.new("ScrollingFrame")
    tab.Content.Name = name .. "Content"
    tab.Content.Size = UDim2.new(1, 0, 1, -50)
    tab.Content.Position = UDim2.new(0, 0, 0, 50)
    tab.Content.BackgroundTransparency = 1
    tab.Content.BorderSizePixel = 0
    tab.Content.ScrollBarThickness = 4
    tab.Content.ScrollBarImageColor3 = self.Theme.Accent
    tab.Content.ZIndex = 10
    tab.Content.Visible = false
    
    local layout = Instance.new("UIListLayout")
    layout.Padding = UDim.new(0, 8)
    layout.HorizontalAlignment = Enum.HorizontalAlignment.Center
    layout.SortOrder = Enum.SortOrder.LayoutOrder
    layout.Parent = tab.Content
    
    local padding = Instance.new("UIPadding")
    padding.PaddingTop = UDim.new(0, 10)
    padding.PaddingLeft = UDim.new(0, 10)
    padding.PaddingRight = UDim.new(0, 10)
    padding.Parent = tab.Content
    
    -- Search container
    tab.SearchContainer = Instance.new("Frame")
    tab.SearchContainer.Name = "SearchContainer"
    tab.SearchContainer.Size = UDim2.new(1, -20, 0, 40)
    tab.SearchContainer.Position = UDim2.new(0, 10, 0, 5)
    tab.SearchContainer.BackgroundColor3 = self.Theme.Secondary
    tab.SearchContainer.BackgroundTransparency = 0.2
    tab.SearchContainer.ZIndex = 12
    
    local searchCorner = Instance.new("UICorner")
    searchCorner.CornerRadius = UDim.new(0, 10)
    searchCorner.Parent = tab.SearchContainer
    
    -- Search icon
    local searchIcon = Instance.new("ImageLabel")
    searchIcon.Name = "SearchIcon"
    searchIcon.Size = UDim2.new(0, 20, 0, 20)
    searchIcon.Position = UDim2.new(0, 10, 0.5, -10)
    searchIcon.Image = "rbxassetid://3926305904"
    searchIcon.ImageRectOffset = Vector2.new(964, 324)
    searchIcon.ImageRectSize = Vector2.new(36, 36)
    searchIcon.ImageColor3 = self.Theme.SubText
    searchIcon.BackgroundTransparency = 1
    searchIcon.ZIndex = 13
    searchIcon.Parent = tab.SearchContainer
    
    -- Search box
    tab.SearchBox = Instance.new("TextBox")
    tab.SearchBox.Name = "SearchBox"
    tab.SearchBox.Size = UDim2.new(1, -50, 1, 0)
    tab.SearchBox.Position = UDim2.new(0, 40, 0, 0)
    tab.SearchBox.BackgroundTransparency = 1
    tab.SearchBox.PlaceholderText = "Tìm kiếm controls..."
    tab.SearchBox.PlaceholderColor3 = self.Theme.SubText
    tab.SearchBox.Text = ""
    tab.SearchBox.TextColor3 = self.Theme.Text
    tab.SearchBox.TextSize = 14
    tab.SearchBox.Font = Enum.Font.Gotham
    tab.SearchBox.TextXAlignment = Enum.TextXAlignment.Left
    tab.SearchBox.ZIndex = 13
    tab.SearchBox.Parent = tab.SearchContainer
    
    -- Clear search button
    tab.ClearSearch = Instance.new("ImageButton")
    tab.ClearSearch.Name = "ClearSearch"
    tab.ClearSearch.Size = UDim2.new(0, 20, 0, 20)
    tab.ClearSearch.Position = UDim2.new(1, -30, 0.5, -10)
    tab.ClearSearch.Image = "rbxassetid://3926305904"
    tab.ClearSearch.ImageRectOffset = Vector2.new(284, 284)
    tab.ClearSearch.ImageRectSize = Vector2.new(36, 36)
    tab.ClearSearch.ImageColor3 = self.Theme.SubText
    tab.ClearSearch.BackgroundTransparency = 1
    tab.ClearSearch.Visible = false
    tab.ClearSearch.ZIndex = 13
    tab.ClearSearch.Parent = tab.SearchContainer
    
    tab.SearchContainer.Parent = tab.Content
    
    -- Search logic
    local searchDebounce = false
    tab.SearchBox:GetPropertyChangedSignal("Text"):Connect(function()
        if searchDebounce then return end
        searchDebounce = true
        
        local query = string.lower(tab.SearchBox.Text)
        tab.ClearSearch.Visible = #query > 0
        tab.IsSearching = #query > 0
        
        if #query == 0 then
            for _, control in pairs(tab.Controls) do
                if control.Instance and control.Instance.Parent then
                    control.Instance.Visible = true
                end
            end
        else
            for _, control in pairs(tab.Controls) do
                if control.Instance and control.Instance.Parent then
                    local controlName = string.lower(control.Name or "")
                    local controlText = string.lower(control.Text or "")
                    local matches = string.find(controlName, query, 1, true) or string.find(controlText, query, 1, true)
                    control.Instance.Visible = matches ~= nil
                end
            end
        end
        
        task.wait(0.1)
        searchDebounce = false
    end)
    
    tab.ClearSearch.MouseButton1Click:Connect(function()
        tab.SearchBox.Text = ""
        tab.ClearSearch.Visible = false
    end)
    
    tab.Content.Parent = self.TabContainer
    tab.Button.Parent = self.TopBar
    
    -- Position tab
    tab.Button.Position = UDim2.new(0, 15 + (#self.Tabs * 105), 0, 5)
    
    -- Click event
    tab.Button.MouseButton1Click:Connect(function()
        for _, otherTab in pairs(self.Tabs) do
            otherTab.Button.BackgroundColor3 = self.Theme.Secondary
            otherTab.Button.TextColor3 = self.Theme.SubText
            otherTab.Content.Visible = false
        end
        
        tab.Button.BackgroundColor3 = self.Theme.Accent
        tab.Button.TextColor3 = Color3.new(1, 1, 1)
        tab.Content.Visible = true
        
        if tab.IsSearching then
            tab.SearchBox:GetPropertyChangedSignal("Text"):Fire()
        end
    end)
    
    function tab:AddControl(control)
        table.insert(self.Controls, control)
        if control.Instance then
            control.Instance.Parent = self.Content
            control.Instance.LayoutOrder = #self.Controls
        end
    end
    
    -- Select first tab
    if #self.Tabs == 0 then
        tab.Button.BackgroundColor3 = self.Theme.Accent
        tab.Button.TextColor3 = Color3.new(1, 1, 1)
        tab.Content.Visible = true
    end
    
    table.insert(self.Tabs, tab)
    return tab
end

function Window:Toggle()
    self.Visible = not self.Visible
    self.Container.Visible = self.Visible
end

-- Controls
local Controls = {}

function Controls.CreateButton(tab, config)
    config = config or {}
    local name = config.Title or "Button"
    local callback = config.Callback or function() end
    
    local button = Instance.new("Frame")
    button.Name = name .. "Button"
    button.Size = UDim2.new(1, -20, 0, 40)
    button.BackgroundColor3 = tab.Window.Theme.Secondary
    button.BackgroundTransparency = 0.2
    button.ZIndex = 11
    
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 8)
    corner.Parent = button
    
    local glow = createGlow(button, tab.Window.Theme.Accent)
    glow.ImageTransparency = 0.9
    glow.Visible = false
    
    local btnText = Instance.new("TextLabel")
    btnText.Name = "Text"
    btnText.Size = UDim2.new(1, 0, 1, 0)
    btnText.BackgroundTransparency = 1
    btnText.Text = name
    btnText.TextColor3 = tab.Window.Theme.Text
    btnText.TextSize = 14
    btnText.Font = Enum.Font.GothamSemibold
    btnText.ZIndex = 12
    btnText.Parent = button
    
    local gradient = Instance.new("UIGradient")
    gradient.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0, tab.Window.Theme.Accent),
        ColorSequenceKeypoint.new(1, tab.Window.Theme.Accent:lerp(Color3.new(1, 1, 1), 0.3))
    })
    gradient.Rotation = 90
    gradient.Enabled = false
    gradient.Parent = button
    
    -- Hover effect
    local hoverTween = TweenService:Create(button, TweenInfo.new(0.2), {BackgroundTransparency = 0.1})
    local unhoverTween = TweenService:Create(button, TweenInfo.new(0.2), {BackgroundTransparency = 0.2})
    
    button.MouseEnter:Connect(function()
        hoverTween:Play()
        glow.Visible = true
        gradient.Enabled = true
    end)
    
    button.MouseLeave:Connect(function()
        unhoverTween:Play()
        glow.Visible = false
        gradient.Enabled = false
    end)
    
    button.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            local clickTween = TweenService:Create(button, TweenInfo.new(0.1), {Size = UDim2.new(1, -25, 0, 38)})
            local releaseTween = TweenService:Create(button, TweenInfo.new(0.1), {Size = UDim2.new(1, -20, 0, 40)})
            clickTween:Play()
            task.wait(0.1)
            releaseTween:Play()
            callback()
        end
    end)
    
    local control = {
        Name = name,
        Text = name,
        Instance = button,
        Type = "Button"
    }
    
    tab:AddControl(control)
    
    local buttonAPI = {}
    function buttonAPI:SetText(newText)
        btnText.Text = newText
        control.Text = newText
    end
    
    return buttonAPI
end

function Controls.CreateToggle(tab, config)
    config = config or {}
    local name = config.Title or "Toggle"
    local default = config.Default or false
    local callback = config.Callback or function() end
    
    local toggle = Instance.new("Frame")
    toggle.Name = name .. "Toggle"
    toggle.Size = UDim2.new(1, -20, 0, 35)
    toggle.BackgroundColor3 = tab.Window.Theme.Secondary
    toggle.BackgroundTransparency = 0.2
    toggle.ZIndex = 11
    
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 8)
    corner.Parent = toggle
    
    local label = Instance.new("TextLabel")
    label.Name = "Label"
    label.Size = UDim2.new(0.7, -10, 1, 0)
    label.Position = UDim2.new(0, 10, 0, 0)
    label.BackgroundTransparency = 1
    label.Text = name
    label.TextColor3 = tab.Window.Theme.Text
    label.TextSize = 14
    label.Font = Enum.Font.Gotham
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.ZIndex = 12
    label.Parent = toggle
    
    local toggleFrame = Instance.new("Frame")
    toggleFrame.Name = "ToggleFrame"
    toggleFrame.Size = UDim2.new(0, 50, 0, 25)
    toggleFrame.Position = UDim2.new(1, -60, 0.5, -12.5)
    toggleFrame.BackgroundColor3 = tab.Window.Theme.Main
    toggleFrame.BackgroundTransparency = 0.3
    toggleFrame.ZIndex = 12
    
    local toggleCorner = Instance.new("UICorner")
    toggleCorner.CornerRadius = UDim.new(1, 0)
    toggleCorner.Parent = toggleFrame
    
    local toggleDot = Instance.new("Frame")
    toggleDot.Name = "ToggleDot"
    toggleDot.Size = UDim2.new(0, 19, 0, 19)
    toggleDot.Position = UDim2.new(0, 3, 0.5, -9.5)
    toggleDot.BackgroundColor3 = Color3.fromRGB(150, 150, 160)
    toggleDot.ZIndex = 13
    
    local dotCorner = Instance.new("UICorner")
    dotCorner.CornerRadius = UDim.new(1, 0)
    dotCorner.Parent = toggleDot
    
    toggleDot.Parent = toggleFrame
    toggleFrame.Parent = toggle
    
    local state = default
    local function updateToggle()
        local tweenInfo = TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
        if state then
            TweenService:Create(toggleDot, tweenInfo, {
                Position = UDim2.new(1, -22, 0.5, -9.5),
                BackgroundColor3 = tab.Window.Theme.Accent
            }):Play()
            TweenService:Create(toggleFrame, tweenInfo, {
                BackgroundColor3 = tab.Window.Theme.Accent:lerp(Color3.new(1, 1, 1), 0.7)
            }):Play()
        else
            TweenService:Create(toggleDot, tweenInfo, {
                Position = UDim2.new(0, 3, 0.5, -9.5),
                BackgroundColor3 = Color3.fromRGB(150, 150, 160)
            }):Play()
            TweenService:Create(toggleFrame, tweenInfo, {
                BackgroundColor3 = tab.Window.Theme.Main
            }):Play()
        end
    end
    
    updateToggle()
    
    toggle.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            state = not state
            updateToggle()
            callback(state)
        end
    end)
    
    local control = {
        Name = name,
        Text = name,
        Instance = toggle,
        Type = "Toggle"
    }
    
    tab:AddControl(control)
    
    local toggleAPI = {}
    function toggleAPI:SetValue(value)
        state = value
        updateToggle()
    end
    
    function toggleAPI:GetValue()
        return state
    end
    
    return toggleAPI
end

-- Main API
function FluentRedz:CreateWindow(title, config)
    local window = Window.new(title, config)
    
    local windowAPI = {}
    
    function windowAPI:CreateTab(name, icon)
        return window:CreateTab(name, icon)
    end
    
    function windowAPI:ToggleVisibility()
        window:Toggle()
    end
    
    function windowAPI:SetTheme(themeName)
        local theme = Themes[themeName]
        if theme then
            window.Theme = theme
            window.Container.BackgroundColor3 = theme.Main
            window.TopBar.BackgroundColor3 = theme.Secondary
            window.TitleLabel.TextColor3 = theme.Text
        end
    end
    
    return windowAPI
end

-- Export controls
FluentRedz.Controls = Controls

return FluentRedz
